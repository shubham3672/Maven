<?xml version="1.0" encoding="UTF-8"?>
<extent-config>

    <!-- General Report Configuration -->
    <report>
        <name>Test Execution Report BDD Cucumber</name>
        <title>Test Execution Report - Selenium TestNG</title>
        <reportLocation>target/extent-reports/</reportLocation>
        <fileName>ExtentReport.html</fileName>
    </report>

    <!-- Report Appearance and Theme -->
    <theme>light</theme>
    <screenshot>enabled</screenshot>
    <flush>true</flush>
    <timeZone>Asia/Kolkata</timeZone>
    <footer>Generated by Selenium Automation Suite Author:Shubham</footer>

    <!-- Layout and Charts -->
    <layout>classic</layout>
    <chart>
        <enabled>true</enabled>
    </chart>

    <!-- Logo Configuration -->
    <logo>target/images/logo.png</logo>

    <!-- Additional Settings -->
    <enableTestSummaryReport>true</enableTestSummaryReport>
    <statistics>true</statistics>

</extent-config>
